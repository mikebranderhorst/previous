<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Reports\Block\Product\Widget\Viewed" name="previous.tab" group="detailed_info"
                   template="Magento_Reports::widget/viewed/content/viewed_grid.phtml" cacheable="false">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Previous</argument>
                    <argument name="page_size" xsi:type="number">4</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
